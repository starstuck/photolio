<div id="galleries">
  <div id="galleries_body">
    <% for gallery in @site.get_menu('galleries').menu_items.map{|mi| mi.target} -%>
      <a href="<%= show_site_gallery_path @site, gallery -%>" 
	 title="<%= gallery.default_menu_label_or_title -%>" 
	 class="gallery_banner">
	<% banner = gallery.get_attachment('banner') -%>
	<% if banner -%>
	  <%= asset_image_tag banner, :size => '800x150', :alt => gallery.default_menu_label_or_title -%>
	<% else -%>
	  <%= gallery.title -%>
	<% end -%>
      </a>
    <% end -%>
  </div>
  <div id="galleries_scroll_button_up"></div>
  <div id="galleries_scroll_button_down"></div>
</div>

