<h1>Editing gallery</h1>

<% form_for(@gallery, :url => admin_site_gallery_path(@site, @gallery)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', admin_site_gallery_path(@site, @gallery) %> |
<%= link_to 'Back', admin_site_galleries_path(@site) %>
