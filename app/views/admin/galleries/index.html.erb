<h1>Listing galleries in <%= @site.name -%> site</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
  </tr>

<% for gallery in @galleries %>
  <tr>
    <td><%=h gallery.name %></td>
    <td><%=h gallery.title %></td>
    <td><%= link_to 'Show', admin_site_gallery_path(@site, gallery) %></td>
    <td><%= link_to 'Edit', edit_admin_site_gallery_path(@site, gallery) %></td>
    <td><%= link_to 'Destroy', admin_site_gallery_path(@site, gallery), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New gallery', new_admin_site_gallery_path(@site) %> | 
