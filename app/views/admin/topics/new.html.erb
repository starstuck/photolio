<h1>New topic for <%= @site.name -%> site</h1>

<% form_for(@topic, :url => admin_site_topic_path(@site, @topic)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :display_in_menu %><br />
    <%= f.check_box :display_in_menu %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_site_topics_path(@site) %>
