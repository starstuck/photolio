<h2>New topic for <%= @site.name -%> site</h2>

<% form_for(@topic, :url => admin_site_topics_path(@site)) do |f| %>
  <div class="record_fields">
    <%= f.error_messages %>
    
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :display_in_menu %><br />
      <%= f.check_box :display_in_menu %>
    </p>
    <p>
      <%= f.label :body %> <it>(Text will be formated using <a href="http://daringfireball.net/projects/markdown/syntax" target="_blank">markdown</a> processor)</it><br />
      <%= f.text_area :body, :cols => 110, :rows => 25 %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  </div>
<% end %>

<hr />

<div class="page_actions">
  <%= link_to 'Back to topics list', admin_site_topics_path(@site) %>
</div>
