<h2>Listing topics in <%= @site.name -%> site</h2>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% for topic in @topics %>
  <tr>
    <td><%=h topic.title %></td>
    <td><%= link_to 'Show', admin_site_topic_path(@site, topic) %></td>
    <td><%= link_to 'Edit', edit_admin_site_topic_path(@site, topic) %></td>
    <td><%= link_to 'Destroy', admin_site_topic_path(@site, topic), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New topic', new_admin_site_topic_path(@site) %> |
<%= link_to 'Back', admin_sites_path -%>
