<h2>Upload photo for <%= @site.name -%> site</h2>

<% form_for(@photo, :url => admin_site_photos_path, :html =>
  {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :file, 'Photo file' %><br />
    <%= f.file_field :file %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 3 %>
  </p>
  <p>
    <%= f.label :photo_keywords %><br />
    <%= f.text_area :photo_keywords, :rows => 6 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_site_photos_path(@site) %>
