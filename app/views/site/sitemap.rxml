xml.instruct!
xml.urlset(:xmlns=>'http://www.google.com/schemas/sitemap/0.9') {
    for item in @sitemap do
    xml.url {
        xml.loc(@url_prefix + url_for(item['loc']))
        xml.lastmod(item['lastmod'].strftime('%y-%m-%d%Y-%m-%dT%H:%M:%S+00:00'))
	xml.priorit(item['changefreq']) if item.key? 'priority'
	xml.priorit(item['priority']) if item.key? 'priority'
    }
    end
}
